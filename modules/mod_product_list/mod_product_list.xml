<?xml version="1.0" encoding="iso-8859-1" ?> 
<install type="module" version="1.5.0">
  <name>product_list</name> 
  <author>Ken Wong Dean Beedell</author> 
  <creationDate>Oct 2008</creationDate> 
  <copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright> 
  <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license> 
  <authorEmail>dean.beedell@lightquick.co.uk</authorEmail> 
  <authorUrl>http://www.lightquick.co.uk</authorUrl> 
  <version>2.0.0</version> 
  <description>This module shows the VM product list in SEF friendly form when used with Artio JoomSEF</description> 
  <files>
  	<filename module="mod_product_list">mod_product_list.php</filename> 
  </files>
  <params>
 	 <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" /> 
	 <param name="category_order" type="list" default="0" label="Category Order By">
		  <option value="0">Name</option> 
		  <option value="1">Ordering</option> 
	 </param>
	 <param name="category_order_direction" type="list" default="0" label="Category Order Direction">
		  <option value="0">ASC</option> 
		  <option value="1">DESC</option> 
	 </param>
	 <param name="product_order" type="list" default="0" label="Product Order By">
		  <option value="0">Name</option> 
		  <option value="1">SKU</option> 
		  <option value="1">Created date</option> 
	 </param>
	 <param name="product_order_direction" type="list" default="0" label="Product Order Direction">
		  <option value="0">ASC</option> 
		  <option value="1">DESC</option> 
	 </param>
	 <param name="show_product" type="list" default="0" label="Product product which :">
		  <option value="0">All product</option> 
		  <option value="1">Published product</option> 
		  <option value="2">Inputed from date to date</option> 
	 </param>
	 <param name="from_date" type="text" default="" label="From Date" description="" /> 
	 <param name="to_date" type="text" default="" label="To Date" description="" /> 
  </params>
 </install>
