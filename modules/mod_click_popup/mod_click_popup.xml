<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Click PopUp</name>
	<author>Andrea S. - joomlovers.net</author>
	<creationDate>2008</creationDate>
  <license>Creative Commons GPL2</license>
	<authorEmail>info@joomlovers.net</authorEmail>
	<authorUrl>www.joomlovers.net</authorUrl>
	<version>1.0</version>
	<description>Click PopUp show a link that open a popup with inside text or a module position. Created bt Andrea S. of www.joomlovers.net</description>
  <files>
    <filename module="mod_click_popup">mod_click_popup.php</filename>
	<filename>helper.php</filename>
	<filename>index.html</filename>
	<filename>tmpl/default.php</filename>
	<filename>tmpl/index.html</filename>
	<filename>js/popupDiv.js</filename>
  </files>
  <params>
	<param name="link" type="text" default="Click to Open" label="Label for open PopUp" />
	<param name="linksize" type="text" default="" label="Font size (optional)" />
	<param name="@spacer" type="spacer" default="" label="" description="" />
	<param name="width" type="text" default="350" label="Width (in px)" />
	<param name="height" type="text" default="250" label="Height (in px)" />
	<param name="bgcolor" type="text" default="#ccc" label="Background color" />
	<param name="txtcolor" type="text" default="#000" label="Font color" />
	<param name="bordersize" type="text" default="1" label="Border size (in px)" />
	<param name="bordertype" type="radio" default="solid" label="Border type">
			<option value="solid">solid</option>
			<option value="dotted">dotted</option>	
	</param>
	<param name="bordercolor" type="text" default="#000" label="Border color" />    	
  <param name="@spacer" type="spacer" default="" label="" description="" />	
	<param name="close" type="text" default="Close" label="Label for hide PopUp" />
	<param name="closesize" type="text" default="" label="Font size (optional)" />
  <param name="@spacer" type="spacer" default="" label="" description="" />
	<param name="content" type="textarea" cols="52" rows="20" default="{loadposition user9}" label="Content" description="You can use text, html or load 1 or more module with {loadposition user9} you can also use html with inside {loadposition user9}"/>
  </params>
</install>
